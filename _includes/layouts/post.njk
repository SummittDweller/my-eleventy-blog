---
layout: layouts/base.njk
---

<section class="page-layout">
  <div class="container">
    <div class="columns">
      <div class="column is-8 is-offset-2">
        <article class="content mt-5">
          <h1 class="title">{{ title }}</h1>
          <p class="subtitle is-6">
            Published: <time datetime="{{ page.date }}">{{ page.date | readableDate }}</time> &bull; Last Commit: <time datetime="{{ last_modified_at }}">{{ last_modified_at | readableDT }}</time> 
          </p>
          {{ content | safe }}
        </article>
      </div>
    </div>
  </div>
</section>